<!--pages/player/player.wxml-->
<view wx:if="{{picUrl}}" class="player-container" style="background:url({{picUrl}}) center/cover no-repeat">
</view>
<view class="player-mask"></view>

<view class="player-info">
   <view class="player-disc {{isPlaying?'playing':''}}">
      <image class="player-img zhuan{{isPlaying?'':'ting'}}"   src="{{picUrl}}"></image>
   </view>

<view class="progress-bar">
<x-progress-bar bind:musicEnd="onNext"/>
</view>

<view class="=control">
   <text class="iconfont icon-shangyishou" bing:tap="onPrev"></text>
   <text class="iconfont {{isPlaying? 'icon-zanting':'icon-bofang1'}}" bind:tap ="togglePlaying"></text>
   <text class="iconfont icon-xiayishou" bind:tap="onNext"></text>

   </view>
</view>



