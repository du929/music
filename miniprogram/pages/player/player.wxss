/* pages/player/player.wxss */
.player-container{
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  filter: blur(40rpx);
  opacity: 0.5;
  z-index: -1;
}
.player-mask{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -2;
  background-color: #222;
}

.player-info{
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.player-disc{
  width: 592rpx;
  height: 592rpx;
  background: url('https://du929.oss-cn-hangzhou.aliyuncs.com/img/disc%281%29.png') no-repeat center/contain;
  position: absolute;
  left: 50%;
  transform: translate(-50%,140rpx);
}

.player-disc::after{
  content:'';
  width: 192rpx;
  height: 274rpx;
  position: absolute;
  top: -150rpx;
  left: 266rpx;
  background:url('https://du929.oss-cn-hangzhou.aliyuncs.com/img/zhen.png') no-repeat center/contain;
  transform: rotate(-15deg);
  transform-origin: 24rpx 10rpx;
  transition:transform 0.8s ease;
}
.playing.player-disc::after{
  transform: rotate(0deg);
}

.player-img{
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -184rpx;
  margin-left: -184rpx;

}

.zhuan{
  animation:disc 12s linear infinite;
}
@keyframes disc{
  from{
   transform: rotate(0deg);
  }to{
   transform: rotate(360deg);
  }
}
.ting{
  animation-play-state: paused;
}

.control{
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform:translateX(-50%);
  display: flex;
  align-items: center;
}

.control .iconfont{
  color:#fefefe;
}

.icon-shangyishou, .icon-xiayishou{
  font-size: 80rpx;
}

.icon-bofang1, .icon-zanting{
  font-size:100rpx;
  margin:0 50rpx;
}

.progress-bar{
  width: 90%;
  position: absolute;
  left: 50%;
  transform:translateX(-50%);
  bottom: 24%;
}